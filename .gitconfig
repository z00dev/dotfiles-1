[user]
	name = Xandor Schiefer
	email = me@xandor.co.za
[core]
	editor = vim
	excludesfile = ~/.cvsignore
	autocrlf = input
	eol = lf
	safecrlf = false
[diff]
	algorithm = patience
[merge]
	tool = vimdiff
[credential]
	helper = cache
[color]
	ui = auto
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !ungit
	stash-unapply = !git stash show -p | git apply -R
	assume-unchanged = !git ls-files -v | grep '^[[:lower:]]'
	edit-dirty = !git status --porcelain | sed s/^...// | xargs $EDITOR
	tracked-ignores = !git ls-files | git check-ignore --no-index --stdin
[push]
	default = current
[pager]
	diff = diff-so-fancy | less --tabs=4 --pattern='^(added|deleted|modified): ' -RFX
	show = diff-so-fancy | less --tabs=4 --pattern='^(added|deleted|modified): ' -RFX
